{
	"name": "youtube-music-desktop",
	"version": "1.0.1",
	"description": "Desktop application for YouTube Music with navigation controls",
	"main": "src/main.js",
	"scripts": {
		"start": "electron .",
		"build": "electron-builder",
		"dist": "electron-builder --win",
		"pack": "electron-builder --dir"
	},
	"keywords": [
		"electron",
		"youtube-music",
		"desktop",
		"windows"
	],
	"author": "Joey Scicluna",
	"license": "MIT",
	"devDependencies": {
		"electron": "^27.0.0",
		"electron-builder": "^24.6.4"
	},
	"build": {
		"appId": "com.youtube-music.desktop",
		"productName": "YouTube Music Desktop",
		"directories": {
			"output": "dist"
		},
		"files": [
			"src/**/*",
			"assets/**/*",
			"node_modules/**/*",
			"package.json"
		],
		"win": {
			"target": "nsis",
			"icon": "assets/YouTubeMusic_Logo.ico"
		},
		"protocols": [
			{
				"name": "YT Music Desktop OAuth",
				"schemes": [
					"ytmusic-desktop"
				]
			}
		],
		"nsis": {
			"oneClick": false,
			"allowToChangeInstallationDirectory": true,
			"createDesktopShortcut": true,
			"createStartMenuShortcut": true
		}
	},
	"dependencies": {
		"electron-deeplink": "^1.0.10"
	}
}
